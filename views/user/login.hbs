                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Login </h3>

                        <form action="/login" class="px-md-2" method="post">
                            {{#if loginErr}}
                            <p class="error text-danger" >{{loginErr}}</p>
                            {{/if}}
                            <div class="form-outline mb-4">
                                <label class="form-label" for="email">email</label>
                                <input type="email" name="email" id="email" class="form-control" />

                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control" />
                            
                            </div>
                             <div>         
                            <button  type="submit" class="btn btn-success btn-lg mb-1 w-50 m-auto">login</button>
                            <a href="/signup">register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>